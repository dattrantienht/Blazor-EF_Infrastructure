@inherits LayoutComponentBase
@inject IJSRuntime JSRuntime

<div class="wrapper">

    <!-- Preloader -->
    <div class="preloader flex-column justify-content-center align-items-center">
        <img class="animation__shake" src="dist/img/AdminLTELogo.png" alt="AdminLTELogo" height="60" width="60">
    </div>

    <AdminMenu/>

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        @Body
    </div>
    <!-- /.content-wrapper -->
    <footer class="main-footer">
        <strong>Copyright &copy; 2014-2021 <a href="https://adminlte.io">AdminLTE.io</a>.</strong>
        All rights reserved.
        <div class="float-right d-none d-sm-inline-block">
            <b>Version</b> 3.1.0
        </div>
    </footer>

    <!-- Control Sidebar -->
    <aside class="control-sidebar control-sidebar-dark">
        <!-- Control sidebar content goes here -->
    </aside>
    <!-- /.control-sidebar -->
</div>
<!-- ./wrapper -->

@code {
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JSRuntime.InvokeAsync<IJSObjectReference>("import", "_framework/blazor.server.js");
            await JSRuntime.InvokeAsync<IJSObjectReference>("import", "/plugins/jquery/jquery.min.js");
            await JSRuntime.InvokeAsync<IJSObjectReference>("import", "/plugins/jquery-ui/jquery-ui.min.js");
            await JSRuntime.InvokeAsync<IJSObjectReference>("import", "/plugins/bootstrap/js/bootstrap.bundle.min.js");
            await JSRuntime.InvokeAsync<IJSObjectReference>("import", "/plugins/chart.js/Chart.min.js");
            await JSRuntime.InvokeAsync<IJSObjectReference>("import", "/plugins/sparklines/sparkline.js");
            await JSRuntime.InvokeAsync<IJSObjectReference>("import", "/plugins/jqvmap/jquery.vmap.min.js");
            await JSRuntime.InvokeAsync<IJSObjectReference>("import", "/plugins/jqvmap/maps/jquery.vmap.usa.js");
            await JSRuntime.InvokeAsync<IJSObjectReference>("import", "/plugins/jquery-knob/jquery.knob.min.js");
            await JSRuntime.InvokeAsync<IJSObjectReference>("import", "/plugins/moment/moment.min.js");
            await JSRuntime.InvokeAsync<IJSObjectReference>("import", "/plugins/daterangepicker/daterangepicker.js");
            await JSRuntime.InvokeAsync<IJSObjectReference>("import", "/plugins/tempusdominus-bootstrap-4/js/tempusdominus-bootstrap-4.min.js");
            await JSRuntime.InvokeAsync<IJSObjectReference>("import", "/plugins/summernote/summernote-bs4.min.js");
            await JSRuntime.InvokeAsync<IJSObjectReference>("import", "/plugins/overlayScrollbars/js/jquery.overlayScrollbars.min.js");
            await JSRuntime.InvokeAsync<IJSObjectReference>("import", "/dist/js/adminlte.js");
            await JSRuntime.InvokeAsync<IJSObjectReference>("import", "/dist/js/demo.js");
            await JSRuntime.InvokeAsync<IJSObjectReference>("import", "/dist/js/pages/dashboard.js");
        }
    }
}